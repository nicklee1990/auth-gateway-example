extends layout.pug

block header
    h1 Please Register

block content
    form(action="/register", method="post")
        div.form-group
            label.control-label Email:
            input.form-control(name="email")
        div.form-group
            label.control-label Password:
            input.form-control(type="password", name="password")
        div.form-group
            div.btn-toolbar
                button.btn.btn-primary Register
                a.btn.btn-link(href="/login") Or Login
